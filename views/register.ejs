<html>
  <head>
    <title>Register page</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="/styles.css" />
  </head>
  <body>
    <div id="app">
    <h1>Register page</h1>
 <% errors.forEach(function(err){ %>
  <p style="color:red;"><%= err.text %></p>
  <% }); %>
            <form action="/user/register" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name" class="form-control" required autofocus value="<%= name %>">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" class="form-control" required value="<%= email %>">
                </div>
                <div class="form-group">
                    <label for="company">Company name</label>
                    <input type="company" name="company" class="form-control" required value="<%= company %>">
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
    </div>
  </body>
</html>
